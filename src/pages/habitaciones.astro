---
import BaseLayout from "../layouts/BaseLayout.astro";
import Fondos from "../components/fondos.astro";
import RoomFeatures from "../components/Habitaciones/RoomFeatures.astro";

const lang = "es"
const ogImage = "https://res.cloudinary.com/dlgeap8h0/image/upload/Suite_1_tlzfen.webp"

const title = "Habitaciones";
const description = "Habitaciones Clásicas, Premium y Suites en Cusco. Con calefacción, Smart TV y WiFi. ¡Traslados de cortesía al aeropuerto incluidos!";
---

<BaseLayout lang={lang}  title={title} description={description} ogImage={ogImage}>
    <Fondos imgFondo={`url(https://i0.wp.com/terraandinahotel.com/wp-content/uploads/2025/12/ban2.jpg?fit=1573%2C600&ssl=1)`} />
    <main class="home">
        <RoomFeatures />
    </main>
</BaseLayout>
