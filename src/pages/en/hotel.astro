---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Fondos from "../../components/fondos.astro";
import HotelStay from "../../components/Hoteles/HotelStay.astro";
import fondoImagen from "../../assets/backgrounds/fachada.webp";

const title = "Hotel";
const description = "Located in a colonial mansion near Plaza San Pedro, Terra Andina offers 51 luxury rooms and excellent service in Cusco.";
---

<BaseLayout title={title} description={description}>
  <Fondos imgFondo={`url(${fondoImagen.src})`} />
  <main class="home">
    <HotelStay />
  </main>
</BaseLayout>