<style>
	.footer {
		background-color: #252424;
		margin-top: 60px;
		color: var(--text-color-primary);
		font-family: var(--font-family-primary);
	}

	.title-footer {
		margin-bottom: 20px;
	}

	.footer__container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 40px 40px;
	}

	.footer__col {
		flex: 1;
		display: flex;
		flex-direction: column;
	}

	.footer__brand {
		max-width: 280px;
	}

	.logo {
	
	}

	.footer__desc {
		font-size: 14px;
		color: var(--text-color-gray);
		line-height: 1.6;
	}

	.lista-elementos {
		list-style: none;
		padding: 0;
		margin: 0;
		display: flex;
		flex-direction: column;
		gap: 10px;
		font-size: 14px;
	}

	.lista-elementos li {
		display: flex;
		gap: 10px;
		align-items: center;
	}

	.icon {
		color: #E9A423;
	}

	.footer__link {
		color: var(--text-color-primary);
		text-decoration: none;
		display: flex;
		gap: 10px;
		align-items: center;
	}

	.footer__link:hover {
		color: #fa8e00;
		transition: 0.3s;
	}

	.footer__payments {
		display: flex;
		flex-direction: column;
		gap: 8px;
		font-size: 14px;
	}

	.footer__bottom {
		border-top: 1px solid #333;
		text-align: center;
		padding: 20px;
		font-size: 13px;
		color: var(--text-color-gray);
	}
</style>
