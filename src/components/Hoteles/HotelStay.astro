---
import HotelDetail from "../Hoteles/HotelDetail.astro";
import HotelImg from "../Hoteles/Hotel-img.astro";

const currentLocale = Astro.currentLocale || 'es';

const translations = {
  es: {
    title: "GRAN LUGAR PARA QUEDARSE Y DISFRUTAR",
    description: "El Terra Andina Mansión Colonial es una Casona Colonial en el centro histórico de Cusco, que fue la capital del Imperio Inca, Cusco, Perú. Es un Hotel de Primera Clase ubicado a media cuadra de la encantadora Plaza San Pedro, el mercado de San Pedro diseñado por Gustavo Eiffel, la Iglesia de San Pedro y a sólo cuatro cuadras de la Plaza Principal."
  },
  en: {
    title: "GREAT PLACE TO STAY AND ENJOY",
    description: "Terra Andina Colonial Mansion is a Colonial Manor in the historic center of Cusco, which was the capital of the Inca Empire, Cusco, Peru. It is a First Class Hotel located half a block from the charming Plaza San Pedro, the San Pedro market designed by Gustavo Eiffel, the Church of San Pedro and only four blocks from the Main Square."
  }
};

const t = translations[currentLocale as keyof typeof translations];
---

<section class="stay__container--feature">
  <div class="flex flex-col justify-center items-center">
    <h1 class="title text-[32px]">
      {t.title}
    </h1>
    <span class="w-[250px] h-[2px] bg-[#D1A526] max-md:hidden"></span>
  </div>
  <div class="w-[90%] xl:w-[60%]">
    <p class=" stay__parrafo text-gray-700 text-center pt-[20px] text-[18px]">
      {t.description}
    </p>
  </div>
  
  <HotelDetail />
  <HotelImg />
</section>

<style>
  .stay__span-title {
    border-bottom: 1px solid rgb(221, 164, 9);
  }
  
  .stay__container--feature {
    display: flex;
    margin-top: 80px;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    align-items: center;
  }
  
  .stay__parrafo {
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  }
</style>