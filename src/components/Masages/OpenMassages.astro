---
import { Image } from "astro:assets";
import masajes from "../../assets/images/massage2.webp";
import Salonmasajes from "../../assets/images/Salon-masajes-2.webp";

const currentLocale = Astro.currentLocale || 'es';

const translations = {
  es: {
    schedule: "Abierto todos los días de 8:00 a 22:00.",
    instructions: [
      "Por favor, haga su reserva con al menos 4 horas de antelación.",
      "Marque \"O\" para que le atienda un representante.",
      "Se requiere un depósito del 50 % al hacer la reserva.",
      "Las \"Manos Curativas\" estarán encantadas de atenderle. Consulte el reverso para ver los tipos de masajes."
    ]
  },
  en: {
    schedule: "Open daily from 8:00 AM to 10:00 PM.",
    instructions: [
      "Please make your reservation at least 4 hours in advance.",
      "Dial \"O\" to be attended by a representative.",
      "A 50% deposit is required when making your reservation.",
      "\"Healing Hands\" will be delighted to assist you. See the back for types of massages."
    ]
  }
};

const t = translations[currentLocale as keyof typeof translations];
---

<section class="section__open  flex  justify-center flex-wrap items-center pt-[50px] ">
  <div class="flex  max-md:flex-col gap-[30px] items-center justify-center  ">
    <div class="w-[50%] max-md:w-[70%] flex flex-col gap-[30px]">
      <div class="flex flex-col gap-[20px]">
        <h4 class="text-center text-xl font-normal text-start text-[#C28E26]">
          {t.schedule}
        </h4>
        
        <ul class="flex flex-col text-[16px] text-gray-700 mt-5 items-start">
          {t.instructions.map((instruction) => (
            <li class="flex items-center justify-center gap-[10px]">
              <i class="text-[#A37816] text-[20px] bi bi-check-lg"></i>
              {instruction}
            </li>
          ))}
        </ul>
      </div>
      
      <Image class="w-[30em]" loading="lazy" src={Salonmasajes} alt="salon-masajes" />
    </div>
    
    <div class="w-[28%] max-md:w-[60%] flex justify-center">
      <Image  loading="lazy" src={masajes} class="w-[20em]" alt="masajes-2" />
    </div>
  </div>
</section>

<style>
  .section__open {
    margin-bottom: 100px;
    font-family: "Poppins", sans-serif;
  }
</style>