---
import { Image } from "astro:assets";
import barVert from "../../assets/images/Bar-vert.webp";
import repcionTah from "../../assets/images/repcion-tah.webp";

const currentLocale = Astro.currentLocale || 'es';

const translations = {
  es: {
    hotelLabel: "Nuestro Hotel"
  },
  en: {
    hotelLabel: "Our Hotel"
  }
};

const t = translations[currentLocale as keyof typeof translations];
---

<div class="w-full flex justify-center max-md:flex-col gap-[35px] p-[2em] items-center">
  <div class="p-[13px] bg-white shadow-black shadow-2xl">
    <Image class="w-[18em]" loading="lazy" src={barVert} alt="bar-vert" />
  </div>
  
  <div class="container-seccion-imagenes">
    <div class="p-[13px] bg-white shadow-black shadow-2xl">
      <Image class="w-[30em]" loading="lazy" src={repcionTah} alt="repcion-tah" />
    </div>
    <span class="span-imagen">{t.hotelLabel}</span>
  </div>
</div>

<style>
  .span-imagen {
    color: #ddac1d;
    font-size: 64px;
    position: relative;
    top: 30px;
    font-family: var(--font-family-tercer);
    font-weight: lighter;
    font-style: normal;
  }
</style>