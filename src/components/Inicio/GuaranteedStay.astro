---
interface Section {
  text: string;
  image: string;
  alt: string;
}

const currentLocale = Astro.currentLocale || 'es';

const servicioEs = await Astro.glob("../../content/info-inicio.md");
const servicioEn = await Astro.glob("../../content/info-inicio-en.md");

const servicioData = currentLocale === 'en' ? servicioEn[0] : servicioEs[0];
const { frontmatter } = servicioData;
const sections = frontmatter.sections as Section[];

const translations = {
  es: {
    title: "LA ESTANCIA PERFECTA, GARANTIZADA",
    subtitle: "Numerosos servicios para garantizar su relax y comodidad."
  },
  en: {
    title: "THE PERFECT STAY, GUARANTEED",
    subtitle: "Numerous services to guarantee your relaxation and comfort."
  }
};

const t = translations[currentLocale as keyof typeof translations];
---

<section class="section-img-casona-colonial container-web pt-[5em]">
  <h2 class="title text-center font-light text-4xl text-gray-700">
    {t.title}
  </h2>
  <h3 class="text-subtitle pt-[10px]">
    {t.subtitle}
  </h3>
  
  <div class="flex justify-center pt-[30px] pb-[60px] items-center">
    <div class="w-[70%] max-lg:w-[95%] grid grid-cols-5 max-md:grid-cols-3 max-sm:grid-cols-2 gap-[50px]">
      {sections.map((section) => (
        <div class="flex text-center gap-[18px] flex-col justify-center items-center">
          <img src={section.image} loading="lazy" alt={section.alt} />
          <span class="text-[14px] text-gray-700">
            {section.text}
          </span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .text-subtitle {
    text-align: center;
    font-size: 18px;
    color: var(--text-color-gray);
  }
</style>