---
import SectionImagen from "./sectionImagen.astro";

const currentLocale = Astro.currentLocale || 'es';

const translations = {
  es: {
    title: {
      part1: "UNA CASONA COLONIAL",
      part2: "EN EL CENTRO HISTORICO DE CUSCO"
    }
  },
  en: {
    title: {
      part1: "A COLONIAL MANSION",
      part2: "IN THE HISTORIC CENTER OF CUSCO"
    }
  }
};

const t = translations[currentLocale as keyof typeof translations];
---

<section class="w-full flex flex-col justify-center items-center">
  <h1 class="title text-4xl text-center p-[4px] pt-[2em] pb-[0.8em]">
    {t.title.part1} <br />
    {t.title.part2}
  </h1>
  <SectionImagen />
</section>

<style>
  .rooms {
    text-align: center;
  }
  
  .rooms__desc {
    margin-bottom: 40px;
    color: #777;
  }
</style>